<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @prison.banner_url %>);">
  <div class="container">
    <h1><%= @prison.name %></h1>
    <!-- <p>Change your life and learn to code at one of our campuses around the world.</p>
    <a class="btn btn-flat" href="#">Apply now</a> -->
    <%= link_to "Add criminal", new_prison_criminal_path(@prison), class: 'btn btn-danger mt-2' %>
  </div>
</div>

<div class="container">
  <div class="cards my-3">
    <% @prison.criminals.each do |criminal| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= criminal.photo.attached? ? (cl_image_path criminal.photo.key) : criminal.image_url %>)">
        <%= criminal.name %>
        <div class="card-tags">
          <% criminal.crimes.each do |crime| %>
            <span><%= crime.name %></span>
          <% end %>
        </div>
        <!-- New form for conviction -->
        <%= link_to new_criminal_conviction_path(criminal), class: 'card-conviction-link' do %>
          <i class="fas fa-gavel"></i>
        <% end %>
        <%= link_to criminal_path(criminal), method: :delete, class: 'card-remove-link', data: { confirm: "send meteor at #{criminal.name}" } do %>
          <i class="fas fa-meteor"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

